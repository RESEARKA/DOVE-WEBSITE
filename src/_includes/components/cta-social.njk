{# CTA and Social Section Component #}

{# Import sanitizer utilities #}
{% from "utils/sanitizer.njk" import sanitizeSvg, sanitizeUrl %}

{# Main CTA and social section #}
{% macro ctaSocial(socialLinks) %}
  <section class="py-16 md:py-24 bg-dove-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Join the DOVE Community</h2>
      <p class="text-xl opacity-90 max-w-3xl mx-auto mb-10">
        Be part of a movement that's changing how cryptocurrency can create positive global impact. Join our community today.
      </p>
      <div class="flex flex-wrap justify-center gap-6">
        {% for item in socialLinks | slice(0, 4) %}
          <a 
            href="{{ sanitizeUrl(item.url) }}" 
            class="flex items-center bg-white/10 hover:bg-white/20 transition-colors rounded-lg px-6 py-4"
            rel="noopener noreferrer"
            target="_blank"
            aria-label="Join our {{ item.name }} community">
            <span class="mr-3 text-white">
              {{ sanitizeSvg(item.icon) }}
            </span>
            <span class="font-medium">{{ item.name }}</span>
          </a>
        {% endfor %}
      </div>
    </div>
  </section>
{% endmacro %}
