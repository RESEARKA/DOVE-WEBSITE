{% extends "layouts/base.njk" %}

{% block content %}
  {# Import component macros #}
  {% from "components/hero.njk" import hero %}
  {% from "components/stats.njk" import stats %}
  {% from "components/features.njk" import features %}
  {% from "components/charity-impact.njk" import charityImpact %}
  {% from "components/how-it-works.njk" import howItWorks %}
  {% from "components/cta-social.njk" import ctaSocial %}

  <main id="main-content">
    {# Hero Section with semantic landmark #}
    <header class="hero-gradient py-16 md:py-24">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 mb-10 md:mb-0 md:pr-12">
            <h1 class="text-4xl md:text-5xl font-display font-bold text-dove-gray-900 leading-tight mb-6">
              Charitable Giving Through<br>
              <span class="text-dove-blue-600">Decentralized Finance</span>
            </h1>
            <p class="text-xl text-dove-gray-600 mb-8 leading-relaxed">
              {{ token.name }} Token combines cryptocurrency innovation with social impact. {{ token.charityFee }} of every transaction is automatically donated to charity through our decentralized protocol.
            </p>
            <div class="flex flex-wrap gap-4">
              <a href="{{ '/how-to-buy/' | safeUrl }}" class="button-primary">
                Buy {{ token.symbol }}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
              <a href="{{ '/docs/' | safeUrl }}" class="button-secondary" rel="noopener">
                Read Documentation
              </a>
            </div>
          </div>
          <div class="md:w-1/2">
            <img 
              src="{{ '/assets/images/dove-hero-illustration.svg' | safeUrl }}" 
              alt="DOVE Token Charitable Ecosystem" 
              class="w-full h-auto"
              width="600" 
              height="400"
              loading="lazy">
          </div>
        </div>
      </div>
    </header>

    {# Stats Section with aria-labelledby #}
    <section aria-labelledby="stats-heading" class="py-12 bg-white">
      <h2 id="stats-heading" class="sr-only">Key Statistics</h2>
      {{ stats(stats) }}
    </section>

    {# Features Section with aria-labelledby #}
    <section aria-labelledby="features-heading" class="py-16 md:py-24 bg-dove-gray-50">
      <h2 id="features-heading" class="text-3xl md:text-4xl font-bold text-dove-gray-900 mb-6 text-center">Key Features</h2>
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <p class="text-xl text-dove-gray-600">
            {{ token.name }} Token combines innovative tokenomics with social responsibility to create a sustainable ecosystem that benefits both holders and charitable causes.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {% for feature in features %}
            <div class="feature-card bg-white rounded-xl p-8 shadow-sm" aria-labelledby="feature-title-{{ loop.index }}">
              <div class="mb-6 text-dove-blue-600">
                {# Use our secure SVG rendering shortcode #}
                {{ safeSvg(feature.icon) | safe }}
              </div>
              <h3 id="feature-title-{{ loop.index }}" class="text-xl font-bold text-dove-gray-900 mb-3">{{ feature.title }}</h3>
              <p class="text-dove-gray-600">{{ feature.description }}</p>
            </div>
          {% endfor %}
        </div>
      </div>
    </section>

    {# Charity Impact Section with aria-labelledby #}
    <section aria-labelledby="charity-impact-heading" class="py-16 md:py-24 bg-white">
      <h2 id="charity-impact-heading" class="text-3xl md:text-4xl font-bold text-dove-gray-900 mb-6 sr-only">Charity Impact</h2>
      {{ charityImpact() }}
    </section>

    {# How It Works Section with aria-labelledby #}
    <section aria-labelledby="how-it-works-heading" class="py-16 md:py-24 bg-dove-blue-50">
      <h2 id="how-it-works-heading" class="text-3xl md:text-4xl font-bold text-dove-gray-900 mb-6 text-center">How {{ token.symbol }} Works</h2>
      {{ howItWorks(steps) }}
    </section>

    {# CTA Section with aria-labelledby #}
    <section aria-labelledby="cta-heading" class="py-16 md:py-24 bg-dove-blue-600 text-white">
      <h2 id="cta-heading" class="text-3xl md:text-4xl font-bold mb-6 text-center">Join the {{ token.name }} Community</h2>
      {{ ctaSocial(social) }}
    </section>
  </main>
{% endblock %}